# ======== Environment Variables ========

# You may want to put all your additions into separate files
# in a separate file, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -d ~/.me/env ]; then
    for f in ~/.me/env/*; do
        source $f;
    done
fi

# ======== Aliases ========

source ~/.me/shell/bash_aliases

# ======== Functions ========

# You may want to put all your additions into separate files
# in a separate file, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -d ~/.me/include ]; then
    for f in ~/.me/include/*; do
        source $f;
    done
fi

# ======== Adjust PATH ========

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# set PATH so it includes /usr/local bin if it exists
if [ -d "/usr/local/bin" ] ; then
    PATH="/usr/local/bin:$PATH"
fi

# set PATH so it includes /usr/local sbin if it exists
if [ -d "/usr/local/sbin" ] ; then
    PATH="/usr/local/sbin:$PATH"
fi

# set PATH so it includes /.module/adt bin if it exists
if [ -d "$HOME/.me/.modules/adt" ] ; then
    PATH="$HOME/.me/.modules/adt:$PATH"
fi

export PATH=$PATH

# ======== Init Programs ========

# You may want to put all your additions into separate files
# in a separate file, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -d ~/.me/shell/lib ]; then
    for f in ~/.me/shell/lib/*; do
        source $f;
    done
fi

if [ -d ~/.me/.modules/adt/programs ]; then
    for f in ~/.me/.modules/adt/programs/homebrew/*-configure.sh; do
        source $f;
    done

    for f in ~/.me/.modules/adt/programs/asdf/*-configure.sh; do
        source $f;
    done
fi
